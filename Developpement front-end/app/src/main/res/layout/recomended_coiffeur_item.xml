<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_marginTop="0dp"
    android:layout_height="180dp"
    android:background="@drawable/get_started_search_edit_text"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="105dp"
        android:layout_gravity="center"


        android:elevation="4dp"
        android:background="@drawable/get_started_search_edit_text"
        android:layout_height="25dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4.3"
                android:textSize="14dp"
                android:textColor="@color/c_get_signup"
                />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_baseline_star_rate_24"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="-15dp"
        android:layout_width="50dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center"


        android:elevation="4dp"
        app:cardBackgroundColor="@color/c_get_signup"
        android:layout_height="50dp">



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="50dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="0dp"
        android:elevation="4dp"

        android:layout_gravity="center"
        app:cardBackgroundColor="@color/c_get_signup"

        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/recmimg"

            android:layout_width="50dp"
            android:src="@drawable/profileimg"


            android:layout_height="50dp"


            />


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/firstlastname_r"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berrachdi Mohamed"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/disponibilite_r"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponible"
            android:textSize="12dp"

            android:textStyle="bold"


            />
        <ImageView
            android:id="@+id/disind_r"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            />


    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:id="@+id/btn_go_profile_r"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:text="Profile"
            android:textAllCaps="false"


            app:cardBackgroundColor="@color/c_get_signup"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:gravity="center"
                android:textStyle="bold"
                />


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/vutton_go_whatsap_r"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_height="25dp"
            android:layout_width="70dp"
            app:cardBackgroundColor="@color/green"

            android:textAllCaps="false"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contacter"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="@color/black"

                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>