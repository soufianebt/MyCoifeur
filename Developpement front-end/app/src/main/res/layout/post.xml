<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"



    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:orientation="horizontal"


        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="60dp"

            android:elevation="4dp"

            android:layout_gravity="center"

            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/itemimg"

                android:layout_width="42dp"
                android:src="@drawable/profileimg"


                android:layout_height="42dp"


                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rabat style"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/post_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="sponsered"
                />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"

            />



    </LinearLayout>

    <TextView
        android:id="@+id/post_description"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/there_s_a_new_shonda_rhimes_show_for_netflix_you_ll_hear_about_pam_tommy_roland_emmerich_has_a_new_disaster_movie_and_jennifer_lopez_a_new_rom_com"
        />

    <ImageView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/post"
        android:id="@+id/post_image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_svgrepo_com"
            android:layout_marginLeft="8dp"

            />

        <TextView
            android:id="@+id/post_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="22 Likes"
            android:gravity="center"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>










</LinearLayout>